<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Activity.Date_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/thongtin"
            android:text="@string/thongtinchamcong"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                style="@style/textview"
                android:text="@string/tennhanvien"
                />

            <TextView
                style="@style/textview"
                android:text="@string/manhanvien" />

            <TextView
                style="@style/textview"
                android:text="@string/tennhanvien"
                />

            <TextView
                style="@style/textview"
                android:text="@string/manhanvien" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTenNVSalary"
                android:text="@string/tennhanvien"
                style="@style/textviewND" />

            <TextView
                android:id="@+id/txtMaNVSalary"
                android:text="@string/manhanvien"
                style="@style/textviewND" />

            <TextView
                android:id="@+id/txtGioBatDau"
                android:hint="@string/time"
                style="@style/textviewND" />

            <TextView
                android:id="@+id/txtGioKetThuc"
                android:hint="@string/time"
                style="@style/textviewND" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/rdoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rdoNghiPhep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/nghiphep"/>
            <RadioButton
                android:id="@+id/rdoKhongLyDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/nghiphep"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/thongtin"
            android:text="@string/chucnang"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnLuuChamCong"
            android:text="@string/luuchamcong"
            style="@style/button" />
        <Button
            android:id="@+id/btnSuaChamCong"
            android:text="@string/suachamcong"
            style="@style/button"/>
        <Button
            android:id="@+id/btnDSNV"
            android:text="@string/danhsachnhanvien"
            style="@style/button"/>

    </LinearLayout>




</LinearLayout>