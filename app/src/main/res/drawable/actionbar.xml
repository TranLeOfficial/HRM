<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <corners android:radius="0dp" />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#4FDCF406"
        android:startColor="#A4AE43"
        android:endColor="#FFEB3B"
        android:type="sweep"
        />
    <padding
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="130dp"
        android:height="30dp"
        />
    <stroke
        android:width="2dp"
        android:color="#E1EA87"
        />

</shape>