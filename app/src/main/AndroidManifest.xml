<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nhan.hrm">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.Register_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity
            android:name=".Activity.Manager_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"></activity>
        <activity
            android:name=".Activity.Staff_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity
            android:name=".Activity.Add_Staff_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        </activity>
        <activity
            android:name=".Activity.Add_Manager_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        </activity>
        <activity
            android:name=".Activity.Account_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity
            android:name=".Activity.Date_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"></activity>
        <activity
            android:name=".Activity.Detail_Project_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity
            android:name=".Activity.Salary_Activity"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>

        <activity android:name=".Activity.List_Staff"></activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>